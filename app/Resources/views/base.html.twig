<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            {% stylesheets '%kernel.root_dir%/Resources/public/css/vendor/semantic.min.css' '%kernel.root_dir%/Resources/public/css/style.css' filter='cssrewrite' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
            <link href='//fonts.googleapis.com/css?family=Raleway:400,300,600' rel='stylesheet' type='text/css'>
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div id="wrapper">
        <div id="cssmenu" class="align-center">{{ knp_menu_render('main') }}</div>
            {% block body %}{% endblock %}
            {% block javascripts %}
                {% javascripts '%kernel.root_dir%/Resources/public/js/vendor/*' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
                {% endjavascripts %}
            {% endblock %}
        </div>

    <div class="modal"><!-- Place at bottom of page --></div>
    </body>
</html>
