{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <table class="ui celled table">
            <thead>
                <th>Name</th>
                <th>Action</th>
            </thead>

            {% do pagination.setTemplate('::pagination.html.twig') %}
            <tfoot>
                <tr>
                    <th colspan="2">
                        <div class="ui right floated pagination menu">{{ knp_pagination_render(pagination) }}</div>
                    </th>
                </tr>
            </tfoot>

            <tbody>
            {% for region in pagination %}
                <tr>
                    <td>{{ region.name }}</td>
                    <td><a href="{{ path('region_teams', {'id' : region.id}) }}">Add teams</a></td>
                </tr>
            {%  else %}
                <tr><td>No stages found</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}